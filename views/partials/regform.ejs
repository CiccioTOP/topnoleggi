    <div class="form-group">
        <label for="name">Nome *</label>
        <input id="name" name="name" type="text" class="form-control" maxlength="110" required/>
 
    </div>
 
   <div class="form-group">
    <label for="firstname">Cognome  *</label>
    <input id="firstname" name="firstname" type="text" class="form-control" maxlength="140" required/>
    </div>
 
    <br>
    <div class="form-group">
    <label for="Data_di_Nascita">Data di nascita *</label>

    <div class="invalid-feedback">
Inserire una data di nascita
    </div>
  
     <div class="form-group">
       <label for="email">E-mail *</label>
       <input name="email" id="email" type="email" class="form-control" size="32" maxlength="140" required/>
       <div class="invalid-feedback">
           Inserire indirizzo e-mail
       </div>
   </div>

   <div class ="form-group">
   <label for="phone">Cell: </label> <br>
   <input type="tel" id="phone" name="phone" placeholder="123-456-7890" pattern="\d{10}$" size="32" required/>

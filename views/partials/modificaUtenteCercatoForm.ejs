<script> if (typeof input["pass"] !== "undefined" && typeof input["repass"] !== "undefined") {

          

    if (input["pass"] != input["repass"]) {

      isValid = false;

      errors["pass"] = "Le passwords non corrispondono.";

    }
}
</script>

<form class="container was-validated col-sm-8 mt-3" method="POST" action="/users/modificadati">

    <div class="form-group">
        <label for="name">Nome *</label>
        <input id="name" name="name" type="text" class="form-control" maxlength="110" value="<%- utente.nome %>">
 
    </div>
 
   <div class="form-group">
    <label for="firstname">Cognome  *</label>
    <input id="firstname" name="firstname" type="text" class="form-control" maxlength="140" value="<%- utente.cognome %>">
    </div>
 

     <div class="form-group">
       <label for="email">E-mail *</label>
       <input name="email" id="email" type="email" class="form-control" size="32" maxlength="140" value="<%- utente.email %>">
       <div class="invalid-feedback">
           Inserire indirizzo e-mail
       </div>
   </div>

   <div class ="form-group">
   <label for="phone">Cell: </label> <br>
   <input class="form-control" type="tel" id="phone" name="phone" placeholder="123-456-7890" pattern="\d{10}$" size="32" value="<%- utente.telefono %>">
   <div class="invalid-feedback">
    Inserire numero di telefono
</div>  
</div>

<div class = "form-group">
<label for="cf">Codice Fiscale *</label> <br>
<input class="form-control" type="text" id="cf"  name = "cf" pattern="^[a-zA-Z]{6}[0-9]{2}[a-zA-Z][0-9]{2}[a-zA-Z][0-9]{3}[a-zA-Z]$" size="32" value="<%- utente.cf %>">
<div class="invalid-feedback">
    Inserire Codice Fiscale
</div>  
</div>

<div class="form-group">
<label for="patente">Patente</label>
<input name="patente" id="patente" type="text" class="form-control" size="32" maxlength="110" value="<%- utente.patente %>">
</div>


<div class="form-group">
       <label for="pass">Password *</label>
       <input name="pass" id="pass" type="password" class="form-control" title="Almeno 8 caratteri, una lettera maiuscola e un numero" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9]).{8,}$" size="32" maxlength="60" required/>
       <div class="invalid-feedback">
           Almeno 8 caratteri di cui uno maiusciolo e un numero
       </div>
   </div>
   <div class="form-group">
       <label for="repass">Reinserisci password *</label>
       <input name="repass" id="repass" type="password" class="form-control" size="32" maxlength="140" required/> 
       <div class="invalid-feedback">
           Le password devono coincidere
       </div>
   </div>
   <a class="btn btn-outline-secondary mt-3" href="javascript:history.back()" class = "previous">&laquo; Indietro</a>
       <button style="float: right;" name="ok" id="ok" type="submit" class="btn btn-outline-secondary mt-3">Invia</button>
   
</form>


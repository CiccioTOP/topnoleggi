
<center>
    <form class="container was-validated col-sm-8 mt-3" method="POST" action="/users/SegnalaGuasto">
    
        <body>
            <legend>Segnala Guasto</legend>
        <div class="RicercaParcheggio">
        
        
                  <div class="col-sm-8">
                    <label for="ID_mezzo">ID mezzo *</label>
                    <input id="ID_mezzo" name="ID_mezzo" type="number" class="form-control" required/>   
                    <label for="guasto">Descrizione Guasto *</label>
                    <input name="descrizione_guasto" id="descrizione_guasto" type="text" class="form-control"  required/>   
                    <label for="foto">Foto *</label>
                    <input name="foto_guasto" id="foto_guasto" type="file" accept="image/*" class="form-control" required/>
                    <div id="myError"></div>
                    <a class="btn btn-outline-secondary mt-3" href="javascript:history.back()" style = "float: left;" class = "previous">&laquo; Indietro</a>
                    <button style = "float: right; "   type="submit" name="submit" id="submit"  class="btn btn-outline-secondary mt-3">Avanti</button>
                
                  </div>
      
               
                </center>
      
          </form>
        </div>
        </body>
      


































<script> if (typeof input["pass"] !== "undefined" && typeof input["repass"] !== "undefined") {

          

    if (input["pass"] != input["repass"]) {

      isValid = false;

      errors["pass"] = "Le passwords non corrispondono.";

    }
}
</script>

<form class="container was-validated col-sm-8 mt-3" method="POST" action="/users/modificadati">

    <div class="form-group">
        <label for="name">Nome *</label>
        <input id="name" name="name" type="text" class="form-control" maxlength="110" value="<%- utente_loggato.nome %>">
 
    </div>
 
   <div class="form-group">
    <label for="firstname">Cognome  *</label>
    <input id="firstname" name="firstname" type="text" class="form-control" maxlength="140" value="<%- utente_loggato.cognome %>">
    </div>
    <p class="form-group">Residenza: *</p>

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" >Regione&nbsp;&nbsp;</span>
        </div>
        <select id="region" class="custom-select" name="region"   required>
            <option value="" selected></option>
            <option value="Abruzzo">Abruzzo</option>
            <option value="Basilicata">Basilicata</option>
            <option value="Calabria">Calabria</option>
            <option value="Campania">Campania</option>
            <option value="Emilia-Romagna">Emilia-Romagna</option>
            <option value="Friuli-Venezia Giulia">Friuli-Venezia Giulia</option>
            <option value="Lazio">Lazio</option>
            <option value="Liguria">Liguria</option>
            <option value="Lombardia">Lombardia</option>
            <option value="Marche">Marche</option>
            <option value="Molise">Molise</option>
            <option value="Piemonte">Piemonte</option>
            <option value="Puglia">Puglia</option>
            <option value="Sardegna">Sardegna</option>
            <option value="Sicilia">Sicilia</option>
            <option value="Toscana">Toscana</option>
            <option value="Trentino-Alto Adige">Trentino-Alto Adige</option>
            <option value="Umbria">Umbria</option>
            <option value="Valle d'Aosta">Valle d'Aosta</option>
            <option value="Veneto">Veneto</option>
        </select>
        <div class="invalid-feedback">
            Selezionare la regione di residenza nuova o confermare la stessa
        </div>
    </div>
    
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text">Provincia&nbsp;</span>
        </div>
        <select id="state" name="state" class="custom-select"  required>
                <option value="" selected></option>
            </select>
        <div class="invalid-feedback">
            Selezionare la provincia di residenza nuova o confermare la stessa
        </div>
    </div>
    
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text">Comune&nbsp;&nbsp;</span>
        </div>
        <select id="town" name="town" class="custom-select"   required>
                <option value="" selected></option>
            </select>
        <div class="invalid-feedback">
            Selezionare il comune di residenza nuova o confermare la stessa
        </div>
    </div>

     <div class="form-group">
       <label for="email">E-mail *</label>
       <input name="email" id="email" type="email" class="form-control" size="32" maxlength="140" value="<%- utente_loggato.email %>">
       <div class="invalid-feedback">
           Inserire indirizzo e-mail
       </div>
   </div>

   <div class ="form-group">
   <label for="phone">Cell: </label> <br>
   <input type="tel" id="phone" name="phone" placeholder="123-456-7890" class="form-control" pattern="\d{10}$" size="32" value="<%- utente_loggato.telefono %>">
   <div class="invalid-feedback">
    Inserire numero di telefono
</div>  
</div>

<div class = "form-group">
<label for="cf">Codice Fiscale *</label> <br>
<input type="text" id="cf"  name = "cf" class="form-control" pattern="^[a-zA-Z]{6}[0-9]{2}[a-zA-Z][0-9]{2}[a-zA-Z][0-9]{3}[a-zA-Z]$" size="32" value="<%- utente_loggato.cf %>">
<div class="invalid-feedback">
    Inserire Codice Fiscale
</div>  
</div>

<div class="form-group">
<label for="patente">Patente</label>
<input name="patente" id="patente" type="text" class="form-control" size="32" maxlength="110" value="<%- utente_loggato.patente %>">
</div>


  <div class="form-group">
   <br>
    <label for="carta">carta di credito</label> 
    <br>
   <input type="text" name="carta" id="carta" class="form-control" value="<%- utente_loggato.carta %>"/>
<br>
    <label for="mese">scadenza</label> 
    <br>
   <input type="month" name="mese" id="mese" class="form-control"  value="<%- utente_loggato.mese %>">
   <br>
<label for="cvv">cvv</label>
<br>
<input type="text" name="cvv" id="cvv"  class="form-control" value="<%- utente_loggato.cvv %>">
</div>

<div class="form-group">
       <label for="pass">Password *</label>
       <input name="pass" id="pass" type="password" class="form-control" title="Almeno 8 caratteri, una lettera maiuscola e un numero" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9]).{8,}$" size="32" maxlength="60" required/>
       <div class="invalid-feedback">
           Almeno 8 caratteri di cui uno maiusciolo e un numero
       </div>
   </div>
   <div class="form-group">
       <label for="repass">Reinserisci password *</label>
       <input name="repass" id="repass" type="password" class="form-control" size="32" maxlength="140" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9]).{8,}$" required/> <!-- onchange="checkPassword(this)" -->
       <div class="invalid-feedback">
           Le password devono coincidere
       </div>
   </div>
   <center>
       <button name="ok" id="ok" type="submit" class="btn btn-outline-secondary mt-3">Invia</button>
   </center>
</form>


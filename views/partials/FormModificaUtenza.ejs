<script> if (typeof input["pass"] !== "undefined" && typeof input["repass"] !== "undefined") {

          

    if (input["pass"] != input["repass"]) {

      isValid = false;

      errors["pass"] = "Le passwords non corrispondono.";

    }
}
</script>

<form class="container was-validated col-sm-8 mt-3" method="POST" action="/users/modificadati">

    <div class="form-group">
        <label for="name">Nome *</label>
        <input id="name" name="name" type="text" class="form-control" maxlength="110" pattern="[a-zA-Z]{2,}"  value="<%- utente.nome %>">
 
    </div>
 
   <div class="form-group">
    <label for="firstname">Cognome  *</label>
    <input id="firstname" name="firstname" type="text" class="form-control" maxlength="140" pattern="[a-zA-Z]{3,}"  value="<%- utente.cognome %>">
    </div>
 

     <div class="form-group">
       <label for="email">E-mail *</label>
       <input name="email" id="email" type="email" class="form-control" size="32" maxlength="140" value="<%- utente.email %>">
       <div class="invalid-feedback">
           Inserire indirizzo e-mail
       </div>
   </div>

   <div class ="form-group">
   <label for="phone">Cell: </label> <br>
   <input class="form-control" type="tel" id="phone" name="phone" placeholder="123-456-7890" pattern="\d{10}$" size="32" value="<%- utente.telefono %>">
   <div class="invalid-feedback">
    Inserire numero di telefono
</div>  
</div>

<div class="form-group">
<label for="patente">Numero Identificativo della Patente</label>
<input name="patente" id="patente" type="text" class="form-control" size="32" maxlength="110" pattern="^[a-zA-Z]{2}[0-9]{7}[a-zA-Z]{1}$" value="<%- utente.patente %>">
</div>

   <a class="btn btn-outline-secondary mt-3" href="javascript:history.back()" class = "previous">&laquo; Indietro</a>
       <button style="float: right;" name="ok" id="ok" type="submit" class="btn btn-outline-secondary mt-3">Invia</button>
   
</form>

